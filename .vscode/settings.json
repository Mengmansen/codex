{
    "rust-analyzer.checkOnSave": true,
    "rust-analyzer.check.command": "clippy",
    "rust-analyzer.check.extraArgs": ["--all-features", "--tests"],
    "rust-analyzer.rustfmt.extraArgs": ["--config", "imports_granularity=Item"],
    "rust-analyzer.cargo.targetDir": "${workspaceFolder}/codex-rs/target/rust-analyzer",
    "[rust]": {
        "editor.defaultFormatter": "rust-lang.rust-analyzer",
        "editor.formatOnSave": true,
    },
    "[toml]": {
        "editor.defaultFormatter": "tamasfe.even-better-toml",
        "editor.formatOnSave": true,
    },
    // Array order for options in ~/.codex/config.toml such as `notify` and the
    // `args` for an MCP server is significant, so we disable reordering.
    "evenBetterToml.formatter.reorderArrays": false,
    "evenBetterToml.formatter.reorderKeys": true,
    "chatgpt.openOnStartup": true,
    "chatgpt.runCodexInWindowsSubsystemForLinux": true,
    "editor.defaultFormatter": "ms-vscode.cmake-tools",
    "editor.formatOnPaste": true,
    "debug.allowBreakpointsEverywhere": true,
    "chat.allowAnonymousAccess": true,
    "chat.disableAIFeatures": true,
    "chat.mcp.gallery.enabled": true,
    "chat.renderRelatedFiles": true,
    "chat.customAgentInSubagent.enabled": true,
    "notebook.diff.experimental.toggleInline": true,
    "notebook.outline.showCodeCells": true,
    "inlineChat.notebookAgent": true,
    "telemetry.editStats.details.enabled": true,
    "npm.enableRunFromFolder": true,
    "prettier.documentSelectors": [
        ""
    ],
    "prettier.experimentalTernaries": true,
    "editor.inlineSuggest.suppressSuggestions": true,
    "editor.inlineSuggest.experimental.showOnSuggestConflict": "always",
    "editor.suggest.shareSuggestSelections": true,
    "editor.suggest.preview": true,
    "files.autoGuessEncoding": true,
    "files.autoSaveWhenNoErrors": true,
    "files.autoSaveWorkspaceFilesOnly": true,
    "testing.alwaysRevealTestOnStateChange": true,
    "testing.automaticallyOpenPeekViewDuringAutoRun": true,
    "problems.showCurrentInStatus": true,
    "remote.downloadExtensionsLocally": true,
    "notebook.consolidatedRunButton": true,
    "chat.mcp.assisted.nuget.enabled": true,
    "chat.mcp.discovery.enabled": {
        "cursor-workspace": true,
        "cursor-global": true,
        "windsurf": true
    },
    "chat.edits2.enabled": true,
    "chat.emptyState.history.enabled": true,
}
